<%= form_with model: tweet, url: tweets, local: true do |f| %>

  <div class="flash-message">
    <%= render 'shared/error_messages', model: f.object %>
  </div>

  <div class="field">
    <%= f.label :title, "作品名", {class: 'motivate-label'} %><span>※必須</span><br />
    <%= f.text_field :title, placeholder: "作品名", :class => 'motivate-field' %>
  </div>

  <div class="field">   
    画像<br />
    <label for="tweet_image" class="motivate-label  motivate-img">
      画像選択
    </label>
    <%= f.file_field :image, class:"hidden motivate-field", id:"tweet_image" %>
    <div id="image-list"></div>
  </div>

  <div class="field">
    <%= f.label :message, "ユーザーへの一言", {class: 'motivate-label'} %><br />
    <%= f.text_area :message, placeholder: "(例)悩んでる方はぜひみてください！", :class => 'motivate-field' %>
  </div>

  <div class="field">
    <%= f.label :text, "説明文", {class: 'motivate-label'} %><span>※必須</span><br />
    <%= f.text_area :text, placeholder: "説明文", maxlength: "600", :class => 'motivate-field text-field' %>
  </div>

  <div class="field">
    <%= f.label :job_id, "おすすめの職業、状況", {class: 'motivate-label'} %><span>※必須</span><br />
    <%= f.collection_select(:job_id, Job.all, :id, :name, {}, {class:"select-box", id:"tweet_job"}) %>
  </div>

  <div class="field">
    <%= f.label :status_id, "おすすめの状態、心境", {class: 'motivate-label'} %><span>※必須</span><br />
    <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"select-box", id:"tweet_status"}) %>
  </div>

  <div class="field">
    <%= f.label :name, "タグ(タグは半角の「,」で区切ってください)", {class: 'motivate-label'} %><br />
    <%= f.text_field :name, placeholder: "（例）ドラマ,医療,社会", :class => 'motivate-field' %>
  </div>

  <div id="search-result">
  </div>

  <div class="actions">
    <%= f.submit btn, :class => 'main-submit btn' %>
  </div>
<% end %>