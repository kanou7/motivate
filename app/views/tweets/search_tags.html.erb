<%= render "shared/header" %>

<div class='flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
</div>

<div class="search-container">

    <%= form_with(url: search_tags_tweets_path, local: true, method: :get, class: "search-form") do |f| %>
      <%= f.text_field :keyword, placeholder: "タグを検索する", class: "search-input search-resultSelect" %>
      <%= f.submit "検索", class: "search-submit search-resultSubmit" %>
      <div id="search-result"></div>
    <% end %>

    <div class="main">

      <div class="left-searchSideBar">
      </div>

      <div class="index">
        <ul class="tag-lists">
          <% if @tags != [] %>
            <div class="tweet-tags">
              <ul class="tweet-tagList search-tagList">
                <% @tags.each do |tag| %>
                  <%= link_to search_tag_tweets_path(tag: tag), class: "tag-link search-tagLink" do %>
                    <div class="tag-name search-tagName">#<%= tag.name %></div>
                  <% end %>
                <% end %>
              </ul>
            </div>
          <% end %>
        </ul>
      </div>

      <div class="right-searchSideBar">
      <div>

    </div>

</div>