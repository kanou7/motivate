<%= render "shared/header" %>
<h2 class="registration-ttl">ログイン</h2>

<div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
</div>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'registration-field' %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password", :class => 'registration-field' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "次回から自動でログイン" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログインする", :class => 'registration-submit' %>
  </div>

<% end %>

<div class="gest-submit">
  <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: 'gest-submitLink', method: :post %>
</div>

<div class="registration-rogin">
  新規登録の方は<%= link_to "こちら", new_user_registration_path, class: "post" %>
</div>
